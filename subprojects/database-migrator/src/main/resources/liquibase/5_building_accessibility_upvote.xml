<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="5" author="swann">
        <createTable tableName="building_accessibility_upvote">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="user_id" type="VARCHAR(36)">
                <constraints nullable="false" />
            </column>
            <column name="building_accessibility_id" type="VARCHAR(36)">
                <constraints
                    nullable="false"
                    foreignKeyName="fk_building_accessibility_upvote_building_accessibility"
                    referencedTableName="building_accessibility"
                    referencedColumnNames="id"
                    deleteCascade="false"
                />
            </column>
            <column name="created_at" type="TIMESTAMP(6)">
                <constraints nullable="false" />
            </column>
            <column name="deleted_at" type="TIMESTAMP(6)">
                <constraints nullable="true" />
            </column>
        </createTable>
        <createIndex tableName="building_accessibility_upvote" indexName="idx_building_accessibility_upvote_1">
            <column name="user_id" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
